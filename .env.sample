# Main configuration

run_evr_withdrawal = true
run_xah_balance_monitor = true
run_heartbeat_monitor = true  

# Copy this to .env file in same directory as transfer_funds.js
# Put each nodes r address on a new line
accounts="rAddressNode01
rAddressNode02
rAddressNode03"

# Secret for regular key that can sign for node r wallets
secret="ssWalletSecretThatCanSIGN"

# Set the receiving 'destination' wallet you control or your exchange wallet
# DO NOT forget to set the TAG of your exchange wallet, leave empty "" quotes if no TAG is needed
destination="rYourWalletYouControl"
tag="1234567"

# XahauD Server
xahaud="wss://xahau.network"

# Minutes from last heartbeat that triggers the alert mail (0 if you don't want to monitor the heartbeat)
minutes_from_last_heartbeat_alert_threshold=120

# Interval in minutes between alerts for the same down event (0 to sendthe alert mail just when the down occurs)
alert_repeat_interval_in_minutes = 60 * 24  

# Balance threshold in XAH that triggers a refund transaction (0 if you don't want to monitor the XAH balance)
xah_balance_threshold = 3

# refund transaction amount
refill_amount = 3


# email account settings (set a free account on https://www.brevo.com/, it gives 300 mails per day )
# follow these instruction to setup your account in BREVO: https://www.programonaut.com/how-to-send-an-email-in-node-js-using-an-smtp-step-by-step/
smtpKey = "<your smtp key>"
smtpEmail = "<your account email in Brevo>"

# heartbeat hook account (do not change it)
heartbeatAccount = "rHktfGUbjqzU4GsYCMc1pDjdHXb5CJamto"








